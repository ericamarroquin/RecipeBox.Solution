@{ 
  Layout = "_Layout"; 
} 

@using RecipeBox.Models
@model RecipeBox.Models.Tag

<h2>Tag Details</h2>
<hr />
<h3>
  @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model =>
  model.Name)
  <h3>

    <ul>
      @foreach (var join in Model.JoinEntities) 
      {
        <li>@Html.ActionLink($"{join.Recipe.Description}", "Details", "Recipes", new { id = join.Recipe.RecipeId})</li>
      }
    </ul>

    <p>
      @Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId })
    </p>
    <p>
      @Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })
    </p>
    <p>@Html.ActionLink("Back to list", "Index")</p>
  </h3>
</h3>